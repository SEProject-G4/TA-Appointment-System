{
  "name": "server",
  "version": "1.0.0",
  "description": "Node.js backend for TA Appointment System",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --runInBand",
    "load-test": "artillery run tests/load/artillery-load-test.yml --output results.json",
    "load-test-simple": "artillery run tests/load/artillery-simple.yml --output results.json",
    "load-test-basic": "artillery run tests/load/artillery-basic.yml --output results.json",
    "load-test-lecturer": "artillery run tests/load/artillery-lecturer.yml --output lecturer-results.json",
    "load-test-admin": "artillery run tests/load/artillery-admin.yml --output admin-results.json",
    "load-test-cse-office": "artillery run tests/load/artillery-cse-office.yml --output cse-office-results.json",
    "load-test-comprehensive": "artillery run tests/load/artillery-comprehensive.yml --output comprehensive-results.json",
    "generate-report": "node tests/load/report-generator.js results.json custom-report.html",
    "generate-lecturer-report": "node tests/load/report-generator.js lecturer-results.json lecturer-report.html",
    "generate-admin-report": "node tests/load/report-generator.js admin-results.json admin-report.html",
    "generate-comprehensive-report": "node tests/load/report-generator.js comprehensive-results.json comprehensive-report.html",
    "view-report": "node tests/load/open-report.js custom-report.html",
    "test-and-report": "npm run load-test-simple && npm run generate-report && npm run view-report",
    "test-all-roles": "npm run load-test-comprehensive && npm run generate-comprehensive-report && node tests/load/open-report.js comprehensive-report.html",
    "load-test-suite": "node tests/load/run-all-tests.js",
    "workflow-report": "node tests/load/workflow-report-generator.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "express-session": "^1.18.2",
    "google-auth-library": "^10.2.1",
    "mongodb": "^6.18.0",
    "mongoose": "^8.17.0",
    "nodemailer": "^7.0.6"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "artillery": "^2.0.21",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.2.3",
    "nodemon": "^3.1.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "verbose": true
  }
}
